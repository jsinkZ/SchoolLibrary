@model SchoolLibrary3.ViewModels.PreRegisterViewModel
@{
    ViewBag.Title = "Создание приглашения для регистрации";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Создание приглашения для регистрации нового Пользователя системы</h2>
<p class="rightAligned">@Html.ActionLink("Вернуться в личный кабинет", "AdminPrivate", "Home")</p>
<form method="post" asp-controller="Account" asp-action="PreRegister">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <fieldset id="editorFS">
        <legend>Пригласить Пользователя</legend>
        <label>Адрес электронной почты:</label>
        @Html.EditorFor(model => model.Email)
        <label>Роль:</label>
        @Html.DropDownListFor(model => Model.RoleName, new SelectList(Model.Roles, "Name"))
        <input type="submit" value="Зарегистрировать" class="ColorSubmit" />
    </fieldset>
</form>