@model List<User>
@{
    ViewBag.Title = "Список Пользователей";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-controller="Account" asp-action="Accounts">Список пользователей</a>
<p class="rightAligned">@Html.ActionLink("Добавить Пользователя", "PreRegister")</p>
<fieldset id="tableFS">
    <legend>@ViewBag.Title</legend>
    @if (Model.Count() > 0)
    {
        <table>
            <tr>
                <th>Логин</th>
                <th>Почта</th>
                <th>Телефон</th>
                <th> Имя </th>
                <th> Фамилия </th>
                <th> Отчество </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailConfirmed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatronymicName)
                    </td>
                    <td>
                        @Html.ActionLink("X", "DeleteAccount", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
    }
</fieldset>