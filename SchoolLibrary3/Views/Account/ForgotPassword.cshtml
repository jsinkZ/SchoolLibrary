@model SchoolLibrary3.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Забыли пароль?";
}
<h2>@ViewData["Title"]</h2>
<form asp-controller="Account" asp-action="ForgotPassword" method="post">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset id="editorFS">
        <legend>Введите адрес электронной почты</legend>
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email)
        <input type="submit" value="Отправить ссылку по электронной почте" class="ColorSubmit" />
    </fieldset>
</form>
<script>
        $('form').submit(function (event) {
            $('input[type="submit"]').remove();
        });
</script>